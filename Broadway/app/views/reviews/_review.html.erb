<div class="review">
    <div class = "review-rating" data-score=<%= review.rating%>></div>
    <p><%= review.rating %></p>
    <p class = "review-comment"><%= review.comment %></p>

    <% if user_signed_in? && review.user_id == current_user.id %>
        <div class = "links btn-group">
            <%= link_to "Edit", edit_play_review_path(review.play, review), class: "btn btn-custom" %>
            <%= link_to "Delete", play_review_path(review.play, review), method: :delete,  class: "btn btn-custom", data: { confirm: "Are you sure?" } %>
        </div>
    <% end %>
</div>