<h1 class = "current-category"><%= params[:category] %></h1>

<% if @plays.count == 0 %>
    <h3>There are no plays in this category!</h3>
<% else %>
    <div class ="row">
    <% @plays.each do |play| %>
        <div class =  "col-md-4">
            <a href="/plays/<%= play.id %>">
                <%= image_tag play.play_img.url(:play_index), class: "play" %>
            </a>
            <h3><%= link_to play.title, play_path(play)%></h3>
            <p><%= truncate(play.description, length:150) %></p>
            <p><strong><%= play.director %></strong></p>
            <p><%=  time_ago_in_words(play.created_at) %></p>
        </div>
    <% end %>
<% end %>